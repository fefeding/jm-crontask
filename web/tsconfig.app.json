{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [
        "env.d.ts",
        "src/typings/*.d.ts",
        "src/**/*",
        "src/**/*.vue",
        "src/**/**/**/**/**/*.vue",
        "package.json",
        "../src/config/devops.config.ts"
    ],
    "exclude": ["src/**/__tests__/*"],
    "compilerOptions": {
        "composite": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "#/*": ["../*"]
        },
        "moduleResolution": "node"
    }
}
